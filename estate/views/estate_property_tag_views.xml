<?xml version="1.0"?>
<odoo>  

    <record id="test_property_tag" model="ir.actions.act_window"> <!-- This id is related to the action menuitem -->
        <field name="name">Property Tag</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tag_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tag.view.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties Tag Tree" editable="bottom"> <!--Editable will allow you to edit the field in the same page instead oppening the form. So inthis case we do not need the form view. -->
                <field name="name"/>
            </tree>
        </field>
    </record>
    

</odoo>